{% extends 'layout_front.html.twig' %}

{% block body %}

    {% include 'vote/_titre.html.twig' %}

    <div class="alert alert-info">
        Pour que votre vote soit valide, merci de voter pour chaque catégorie.
    </div>
    <br />
    {% for categorie in categories %}
        <div class="card bg-light mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-10">
                        <h3>{{ categorie.nom }}</h3>
                    </div>
                    <div class="col-2">
                        {% if categorie.complete %}
                            <span class="float-right" title="Voté"><i class="fas fa-check" style="color: #1c7430;"></i></span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">
                    {{ categorie.description|nl2br }}
                </p>

                {% if categorie.complete %}
                    <p class="alert alert-info">Vous avez déjà voté</p>
                {% else %}
                    <h4><a href="{{ path('vote_new',{'ordre':categorie.ordre}) }}">les proposés sont...</a></h4>
                {% endif %}
            </div>
        </div>

    {% endfor %}

{% endblock %}

