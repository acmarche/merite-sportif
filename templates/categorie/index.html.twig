{% extends 'layout_front.html.twig' %}

{% block body %}
    <div class="card bg-light mb-3">
        <div class="card-header">

            <div class="row">
                <div class="col-8">
                    <h3>Liste des categories</h3>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-primary" href="{{ path('categorie_new') }}">
                        <i class="fas fa-plus"></i> Ajouter</a>
                </div>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-bordered table-responsive-sm">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Ordre d'affichage</th>
                    <th>Candidats</th>
                </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>
                            <a href="{{ path('categorie_show', {'id': categorie.id}) }}">
                                {{ categorie.nom }}</a>
                        </td>
                        <td>{{ categorie.ordre }}</td>
                        <td>
                            {{ categorie.candidats|length }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
