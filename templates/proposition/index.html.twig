{% extends 'layout_front.html.twig' %}

{% block body %}


    <div class="alert alert-warning">
        {% if complete == true %}
            Votre vote est complet. Merci
        {% else %}
            Proposer un candidat pour chaque catégorie
        {% endif %}
    </div>

    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>Propositions de candidats</h3>
        </div>


        <div class="card-body">
            {% for categorie in categories %}
                <div class="card bg-light mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-10">
                                <h3>{{ categorie.nom }}</h3>
                            </div>
                            <div class="col-2">

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            {{ categorie.description|nl2br }}
                        </p>

                        {% if categorie.complete %}
                            <p class="alert alert-info">
                                <a href="{{ path('proposition_show',{'id':categorie.proposition}) }}">
                                    Vous avez déjà proposé un candidat
                                </a>
                            </p>
                        {% else %}
                            <h4><a href="{{ path('proposition_new',{'id':categorie.id}) }}">Proposer un candidat</a>
                            </h4>
                        {% endif %}
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>
    <br/>

{% endblock %}
