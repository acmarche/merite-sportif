{% extends 'layout_front.html.twig' %}

{% block title %}{{sport}}{% endblock %}

{% block body %}
    <div class="card bg-light mb-3">
        <div class="card-header">
            <h2>{{ sport }}</h2>
        </div>
        <div class="card-body">

            {% include 'sport/_actions.html.twig' %}

            <h3 class="mt-2 text-success">Candidats</h3>
            <br/>
            <ul class="list-group">
                {% for candidat in sport.candidats %}
                    <li class="list-group-item"><a
                                href="{{ path('candidat_show', {'id': candidat.id}) }}">{{ candidat }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    {{ include('sport/_delete_form.html.twig') }}
{% endblock %}
