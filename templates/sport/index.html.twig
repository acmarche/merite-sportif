{% extends 'layout_front.html.twig' %}

{% block body %}
    <div class="card bg-light mb-3">
        <div class="card-header">

            <div class="row">
                <div class="col-8">
                    <h3>Liste des sports</h3>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-primary" href="{{ path('sport_new') }}">
                        <i class="fas fa-plus"></i> Ajouter</a>
                </div>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Candidats(s)</th>
                </tr>
                </thead>
                <tbody>
                {% for sport in sports %}
                    <tr>
                        <td>
                            <a href="{{ path('sport_show', {'id': sport.id}) }}">
                                {{ sport.nom }}</a>
                        </td>
                        <td>{{ sport.candidats|length }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
